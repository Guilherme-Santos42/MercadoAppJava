<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ListView para exibir produtos -->
    <ListView
        android:id="@+id/listViewProdutos"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_weight="1" />


    <!-- Checkboxes para formas de pagamento -->

    <CheckBox
        android:id="@+id/checkboxCredito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crédito" />

    <CheckBox
        android:id="@+id/checkboxDebito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Débito" />

    <CheckBox
        android:id="@+id/checkboxPix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pix" />

    <!-- Exibir total da venda -->
    <CheckBox
        android:id="@+id/checkboxDinheiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinheiro" />

    <!-- Botão para finalizar venda -->

    <TextView
        android:id="@+id/txtTotalVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Total: R$ 0,00"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnFinalizarVenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Finalizar Venda" />

    <!-- Botão para limpar cliques -->
    <Button
        android:id="@+id/btnLimparCliques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:drawableStart="@android:drawable/ic_menu_close_clear_cancel"
        android:text="Limpar Cliques"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnVoltarMenu"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:text="Voltar ao Menu" />


</LinearLayout>
